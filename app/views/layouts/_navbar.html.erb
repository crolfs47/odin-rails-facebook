<nav class="navbar is-success" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <figure class="navbar-item"><%= image_tag('logo.png') %></figure>
    <%= link_to 'FakeBook', root_path, class: "navbar-item is-size-3 has-text-weight-bold has-text-success-dark" %>
    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>
  <div id="navbarBasicExample" class="navbar-menu">
    <div class="navbar-start">
      <% if current_user %>
        <%= link_to 'Discover Users', users_path, class: "navbar-item" %>
        <%= link_to 'Events', events_path, class: "navbar-item" %>
      <% end %>
    </div>
    <div class="navbar-end">
      <div class="navbar-start">
        <% if current_user %>
          <%= link_to current_user.full_name, user_path(current_user), class: "navbar-item has-text-white" %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <% if current_user.notifications.unread.length < 1 %>
                <%= image_tag('bell.png') %>
              <% else %>
                <%= image_tag('bell-solid.png') %>
              <% end %>
            </a>
            <div class="navbar-dropdown">
              <a class="navbar-item">
                <%= link_to "#{current_user.notifications.unread.length} New Notifications", notifications_path, class: "navbar-item" %>
              </a>
            </div>
          </div>
        <% end %>
        <div class="buttons">
          <% if current_user %>
            <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "button is-success is-light" %>
          <% else %>
            <%= button_to "Login", user_session_path, method: :get, class: "button is-success is-light" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</nav>
