<h1><%= "#{@user.full_name}'s Friend Page" %></h1><br>

<h2>Accepted Friends</h2>
<% @user.friends.each do |friend| %>
  <%= link_to friend.full_name, friend %><br>
<% end %><br>


<h2>Pending Friend Requests Received</h2>



<% @user.received_friendships.pending.each do |friendship| %>
  <%= link_to friendship.user.full_name, friendship.user %>
  <%= link_to "Confirm Request", user_friendship_path(id: friendship.id), data: { turbo_method: :patch }, class: "button is-success is-outlined is-small" %><br>
<% end %><br><br>

<h2>Pending Friend Requests Sent</h2>

<% @user.friendships.pending.each do |friendship| %>
  <%= link_to friendship.friend.full_name, friendship.friend %>
  <%= link_to "Cancel Request", user_friendship_path(id: friendship.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "button is-success is-outlined is-small" %>
<% end %><br><br>




