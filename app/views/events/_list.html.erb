<div class="events-container">
    <h2 class="title is-5">Upcoming Events</h2>
    <div class="event-card-container">
      <% @events.upcoming.each do |event| %>
        <%= render "events/card", event: event %>
      <% end %>
    </div>
  </div>
  <div class="events-container">
    <h2 class="title is-5">Past Events</h2>
    <div class="event-card-container">
      <% @events.past.each do |event| %>
        <%= render "events/card", event: event %>
      <% end %>
    </div>
  </div>